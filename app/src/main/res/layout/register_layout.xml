<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">
    
    <TextView
        android:id="@+id/register_phone_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机"
        android:textColor="@color/login_text_color"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_phone_hint"
        android:hint="填写你常用的手机号码作为登录账号"
        android:textColorHint="@color/hint_color"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/register_verify_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_phone"
        android:text="验证码"
        android:textColor="@color/login_text_color"
        android:layout_margin="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/verify_code_layout"
        android:layout_below="@+id/register_verify_hint"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <EditText
            android:id="@+id/verify_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="验证码"
            android:textColorHint="@color/hint_color"/>

        <Button
            android:id="@+id/send_verify_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="发送短信验证码"
            android:textColor="@color/window_background"
            android:background="@color/toolbar_background"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/register_pass_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textColor="@color/login_text_color"
        android:layout_below="@+id/verify_code_layout"
        android:layout_margin="15dp"
        />
    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_pass_hint"
        android:hint="5-20位英文、数字、符号，区分大小写"
        android:textColorHint="@color/hint_color"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/enterprise_code_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password"
        android:text="企业码"
        android:layout_margin="15dp"
        android:textColor="@color/login_text_color"/>
    <EditText
        android:id="@+id/enterprise_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/enterprise_code_hint"
        android:hint="企业用户请输入企业码"
        android:textColorHint="@color/hint_color"/>
    <TextView
        android:id="@+id/register_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已阅读并同意《HSE服务协议》"
        android:textColor="@color/hint_color"
        android:layout_below="@+id/enterprise_code"
        android:layout_margin="15dp"/>

    <Button
        android:id="@+id/register_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="@color/window_background"
        android:background="@color/toolbar_background"
        android:layout_below="@+id/register_rules"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
    

</RelativeLayout>
